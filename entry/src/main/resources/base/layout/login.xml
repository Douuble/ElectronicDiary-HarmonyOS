<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="230vp"
        ohos:width="match_parent"        >
        <Image
            ohos:top_margin="160vp"
            ohos:height="70vp"
            ohos:width="70vp"
            ohos:scale_mode="stretch"
            ohos:left_margin="250vp"
            ohos:image_src="$media:gift_open"
            >
        </Image>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:margin="40vp"
        ohos:padding="10vp">
        <Image

            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:user"
            ohos:scale_mode="stretch"
            ohos:left_margin="10vp">
        </Image>

        <TextField
        ohos:id="$+id:userl"
        ohos:top_margin="0vp"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="#FFE4E1"
        ohos:text_size="20vp"
        ohos:text_font="HwChinese-medium"
        ohos:hint="请输入用户名:)"
        ohos:left_margin="10vp"
        ohos:right_margin="10vp"
        ohos:text_alignment="center">
        </TextField>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:left_margin="40vp"
        ohos:right_margin="40vp"
        ohos:padding="10vp">
        <Image
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:password"
            ohos:scale_mode="stretch"
            ohos:left_margin="10vp">
        </Image>

        <TextField
            ohos:id="$+id:passwordl"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:background_element="#FFE4E1"
            ohos:text_size="20vp"
            ohos:text_font="HwChinese-medium"
            ohos:hint="请输入密码:-)"
            ohos:text_alignment="center"
            ohos:left_margin="10vp"
            ohos:right_margin="10vp"
            >
        </TextField>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:left_margin="210vp"
        ohos:padding="10vp"
       >
        <Text
            ohos:text_size="15vp"
            ohos:height="20vp"
            ohos:width="70vp"
            ohos:text="忘记密码？"

            ></Text>

    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:button1"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_size="18vp"
            ohos:text="注册"
            ohos:background_element="$graphic:capsule_button_element"
            ohos:left_margin="80vp"
            ohos:padding="10vp"
            />
        <Button
            ohos:id="$+id:button2"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_size="18vp"
            ohos:text="登录"
            ohos:background_element="$graphic:capsule_button_element"
            ohos:left_margin="30vp"
            ohos:padding="10vp"
            />
    </DirectionalLayout>



</DirectionalLayout>