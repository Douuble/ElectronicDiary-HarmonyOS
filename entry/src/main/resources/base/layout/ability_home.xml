<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:root_layout"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#efefef"
    ohos:margin="0"
    ohos:orientation="vertical"
    ohos:padding="0vp">
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#FFDBAFAA"
        ohos:margin="0vp"
        ohos:padding="5vp">
        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:padding="5vp"
            ohos:text="生活碎片"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:text_size="50"/>
        <Button
            ohos:id="$+id:btn_exit"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:align_parent_top="true"
            ohos:background_element="#FFDBAFAA"
            ohos:padding="5vp"
            ohos:text="返回"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:text_size="50"/>
        <Button
            ohos:id="$+id:btn_addnote"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:align_parent_top="true"
            ohos:background_element="#FFDBAFAA"
            ohos:padding="5vp"
            ohos:text="添加"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:text_size="50"/>
    </DependentLayout>
    <ListContainer
        ohos:id="$+id:list_container"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:margin="5vp">
    </ListContainer>
    <DependentLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="white"
        ohos:margin="5vp">
        <Text
            ohos:id="$+id:i_notice"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:center_in_parent="true"
            ohos:text="还未添加碎片哦(╹ڡ╹ )"
            ohos:text_alignment="center"
            ohos:text_color="#FFDBAFAA"
            ohos:text_size="20fp"/>
    </DependentLayout>

</DirectionalLayout>